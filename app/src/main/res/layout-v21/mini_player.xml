<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/play_pause_mini"
        android:layout_width="@dimen/size38dp"
        android:layout_height="@dimen/size38dp"
        android:layout_marginBottom="@dimen/size8dp"
        android:layout_marginEnd="@dimen/size8dp"
        android:layout_marginTop="@dimen/size8dp"
        android:background="@drawable/ripple"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play" />

    <com.riseapps.xmusic.widgets.EqualizerView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/equalizer_view"
        android:layout_width="@dimen/size30dp"
        android:layout_height="@dimen/size30dp"
        android:layout_marginBottom="@dimen/size8dp"
        android:layout_marginLeft="@dimen/size8dp"
        android:layout_marginRight="@dimen/size8dp"
        android:layout_marginTop="@dimen/size8dp"
        android:visibility="gone"
        custom:animDuration="3500"
        custom:layout_constraintBottom_toBottomOf="@+id/play_pause_mini"
        custom:layout_constraintRight_toLeftOf="@+id/play_pause_mini"
        custom:layout_constraintTop_toTopOf="@+id/play_pause_mini" />


    <android.support.v7.widget.CardView
        android:id="@+id/album_art_card"
        android:layout_width="@dimen/size50dp"
        android:layout_height="@dimen/size50dp"
        android:layout_marginBottom="@dimen/size8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/size8dp"
        app:cardCornerRadius="@dimen/size25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/album_art_mini"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@color/colorBlack" />

    </android.support.v7.widget.CardView>

    <com.riseapps.xmusic.widgets.MainTextView
        android:id="@+id/name_mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/size14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/album_art_card"
        app:layout_constraintRight_toLeftOf="@+id/equalizer_view"
        app:layout_constraintTop_toTopOf="@+id/album_art_card" />

    <com.riseapps.xmusic.widgets.MainTextViewSub
        android:id="@+id/artist_mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="2dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/size14sp"
        app:layout_constraintBottom_toBottomOf="@+id/album_art_card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/name_mini"
        app:layout_constraintRight_toLeftOf="@+id/equalizer_view" />
</android.support.constraint.ConstraintLayout>