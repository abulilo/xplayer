<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/song_list_card"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/album_art_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="25sp"
            app:cardElevation="4dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/album_art"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/empty"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/album_art_card"
            android:layout_toEndOf="@+id/album_art_card"
            android:layout_alignTop="@+id/album_art_card"
            android:layout_marginStart="12sp"
            android:gravity="center_vertical">

            <com.riseapps.xmusic.widgets.MainTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                android:textColor="@color/textColorPrimary"
                android:textSize="14sp"
                android:maxLines="2"
                android:layout_marginStart="18dp"/>
            <com.riseapps.xmusic.widgets.MainTextViewSub
                android:id="@+id/artist_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="TextView"
                android:layout_marginStart="18dp"
                android:textSize="13sp"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_like"
            android:background="@null"
            android:tint="@color/textColorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>