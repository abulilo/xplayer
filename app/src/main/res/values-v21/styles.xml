<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorTertiary">@color/colorPrimaryFontDark</item>
        <item name="actionModeBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorMainBackground</item>
        <item name="iconDual">#000</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorTertiary">@color/colorPrimaryFontDarkInverse</item>
        <item name="actionModeBackground">@color/colorPrimaryInverse</item>
        <item name="android:colorBackground">@color/colorPrimaryDarkInverse</item>
        <item name="iconDual">#FAFAFA</item>
    </style>

    <style name="AppTheme.Dark2" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/textColorPrimary2</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorTertiary">@color/colorPrimaryFontDark2</item>
        <item name="actionModeBackground">@color/colorPrimary2</item>
        <item name="android:colorBackground">@color/colorPrimaryDark2</item>
        <item name="iconDual">#FAFAFA</item>
    </style>

    <style name="AppTheme.Dark3" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark3</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/textColorPrimary3</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorTertiary">@color/colorPrimaryFontDark3</item>
        <item name="actionModeBackground">@color/colorPrimary3</item>
        <item name="android:colorBackground">@color/colorPrimaryDark3</item>
        <item name="iconDual">#FAFAFA</item>
    </style>

    <style name="AppTheme.Dark4" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark4</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary4</item>
        <item name="android:textColorTertiary">@color/colorPrimaryFontDark4</item>
        <item name="actionModeBackground">@color/colorPrimary4</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorBackground">@color/colorMainBackground4</item>
        <item name="iconDual">@color/colorPrimaryDark4</item>
    </style>


    <style name="ToolbarTheme" parent="AppTheme">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">#7f8c8d</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>