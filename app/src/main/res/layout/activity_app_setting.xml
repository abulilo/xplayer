<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.riseapps.xmusic.view.Activity.AppSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The toolbar and main content view -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_below="@+id/statusBar"
                android:layout_gravity="center"
                app:layout_scrollFlags="scroll|enterAlways"
                >

                <com.riseapps.xmusic.widgets.MainTextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_title"
                    android:textColor="@color/textColorPrimary"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbar">

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_shake"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <Switch
                            android:id="@+id/setting_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            android:switchMinWidth="43dp"
                            android:layout_centerVertical="true"
                            android:thumb="@drawable/customswitchselector"
                            android:track="@drawable/custom_switch_background" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:layout_toEndOf="@id/setting_pro"
                            android:orientation="vertical">

                            <com.riseapps.xmusic.widgets.MainTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pro_controls_heading"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                            <com.riseapps.xmusic.widgets.MainTextViewSub
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pro_control_subHeading" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_equalizer"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:layout_below="@id/setting_shake"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/setting_one_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/ic_equaliser" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:layout_toEndOf="@id/setting_one_icon"
                            android:orientation="vertical">

                            <com.riseapps.xmusic.widgets.MainTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/equalizer_heading"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                            <com.riseapps.xmusic.widgets.MainTextViewSub
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/equalizer_subHeading" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/setting_equalizer"
                    android:layout_marginTop="1dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/setting_two_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/ic_sleep_timer" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:layout_toEndOf="@id/setting_two_icon"
                            android:orientation="vertical">

                            <com.riseapps.xmusic.widgets.MainTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sleep_timer_heading"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                            <com.riseapps.xmusic.widgets.MainTextViewSub
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sleep_timer_subHeading" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_unlocked"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/setting_sleep"
                    android:layout_marginTop="1dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/setting_four_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/ic_payment" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:layout_toEndOf="@id/setting_four_icon"
                            android:orientation="vertical">

                            <com.riseapps.xmusic.widgets.MainTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share_app_heading"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                            <com.riseapps.xmusic.widgets.MainTextViewSub
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share_app_subHeading" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_rate"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/setting_unlocked"
                    android:layout_marginTop="1dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/ad_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/ic_like"
                            android:tint="@color/colorPrimaryFontDark"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:layout_toEndOf="@id/ad_icon"
                            android:orientation="vertical">

                            <com.riseapps.xmusic.widgets.MainTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rate_us_heading"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                            <com.riseapps.xmusic.widgets.MainTextViewSub
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rate_us_subHeading" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_share"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/setting_rate"
                    android:layout_marginTop="1dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_margin="12dp"
                            app:srcCompat="@drawable/ic_share"
                            android:tint="@color/colorPrimaryFontDark"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp"
                            android:layout_toEndOf="@id/share"
                            android:orientation="vertical">

                            <com.riseapps.xmusic.widgets.MainTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share_app"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                            <com.riseapps.xmusic.widgets.MainTextViewSub
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/recomment_it_to_others" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_id"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
