<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/theme_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/lightAccent">

    <com.riseapps.xmusic.widgets.MainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Free Themes"
        android:textColor="@color/colorPrimaryFontDark"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size20dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/theme1"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp"
            android:padding="3dp">

            <ImageView
                android:id="@+id/tick1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/theme2"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:layout_marginStart="20dp"
            card_view:cardBackgroundColor="@color/colorPrimaryInverse"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.riseapps.xmusic.widgets.MainTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Premium Themes"
            android:textColor="@color/colorPrimaryFontDark"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="6dp"
            card_view:srcCompat="@drawable/ic_lock" />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size20dp"
        android:layout_marginTop="@dimen/size20dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/theme3"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardBackgroundColor="@color/colorPrimary2"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/theme5"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardBackgroundColor="@color/colorMainBackground4"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/theme4"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:layout_marginStart="20dp"
            card_view:cardBackgroundColor="@color/colorPrimary3"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/size20dp"
        android:layout_marginTop="@dimen/size20dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <android.support.v7.widget.CardView
            android:id="@+id/theme7"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardBackgroundColor="@color/colorPrimary6"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/theme8"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:layout_marginStart="20dp"
            card_view:cardBackgroundColor="@color/colorPrimary7"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/theme6"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            card_view:cardBackgroundColor="@color/colorPrimary5"
            card_view:cardCornerRadius="1dp"
            android:layout_marginStart="20dp"
            card_view:cardElevation="5dp">

            <ImageView
                android:id="@+id/tick6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>